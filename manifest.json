{
  "manifest_version": "2",
  "required_api_version": "2",
  "api_version": "1",
  "name": "System Management Direct",
  "description": "Direct access to Logout, Shut Down and Restart commands",
  "developer_name": "episode6, Inc.",
  "icon": "icon.svg",
  "preferences": [
    {
      "id": "kill-session",
      "type": "keyword",
      "name": "Logout",
      "default_value": "Logout",
      "description": "Log out"
    },
    {
      "id": "restart",
      "type": "keyword",
      "name": "Reboot / Restart",
      "default_value": "Reboot / Restart",
      "description": "Restart the system"
    },
    {
      "id": "shutdown",
      "type": "keyword",
      "name": "Shut Down / Power Off",
      "default_value": "Shut Down / Power Off",
      "description": "Shut down system"
    }
  ]
}
